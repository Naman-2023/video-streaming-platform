{
  "name": "video-streaming-platform",
  "version": "1.0.0",
  "description": "A microservices-based video streaming platform with multi-quality transcoding and HLS streaming",
  "private": true,
  "scripts": {
    "setup": "./scripts/dev-setup.sh",
    "dev": "docker-compose -f docker-compose.dev.yml up -d && npm run dev:services",
    "dev:services": "concurrently \"npm run dev --workspace=services/api-gateway\" \"npm run dev --workspace=services/upload-service\" \"npm run dev --workspace=services/job-service\" \"npm run dev --workspace=services/streaming-service\"",
    "dev:gateway": "npm run dev --workspace=services/api-gateway",
    "dev:upload": "npm run dev --workspace=services/upload-service",
    "dev:jobs": "npm run dev --workspace=services/job-service",
    "dev:streaming": "npm run dev --workspace=services/streaming-service",
    "dev:web": "npm run dev --workspace=services/web-interface",
    "build": "npm run build --workspaces",
    "build:shared": "npm run build --workspace=packages/shared",
    "build:sdk": "npm run build --workspace=packages/client-sdk",
    "test": "npm run test --workspaces",
    "test:e2e": "npm run test --workspace=e2e",
    "test:e2e:ui": "npm run test:ui --workspace=e2e",
    "test:performance": "npm run performance --workspace=e2e",
    "load-test": "npm run load-test --workspace=load-testing",
    "load-test:upload": "npm run load-test:upload --workspace=load-testing",
    "load-test:streaming": "npm run load-test:streaming --workspace=load-testing",
    "performance-regression": "npm run performance-regression --workspace=load-testing",
    "lint": "eslint . --ext .ts,.js",
    "format": "prettier --write .",
    "clean": "npm run clean --workspaces",
    "stop": "docker-compose -f docker-compose.dev.yml down"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "fluent-ffmpeg": "^2.1.3",
    "fs-extra": "^11.3.2"
  }
}
